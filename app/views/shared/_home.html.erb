<div class='main'>

  <div class="all-data">

  <%# 自分のデータ %>
    <div class="my-data">
      <h2 class='title'>My training data</h2>
      <% if @trainings2.present? %>
        <div class="graphs">
          <div class="detail-data">
            <div class="each-data">
              <h4 class="theme">＜本日のトレーニング＞</h4>
              <%= column_chart @data%>
            </div>

            <div class="each-data">
              <h4 class="theme">＜１週間のトレーニングバランス＞</h4>
              <%= pie_chart @data2 %>
            </div>

            <div class="each-data">
              <h4 class="theme">＜１週間分の総回数の推移＞</h4>
              <%= line_chart @data3 ,curve: false%>
            </div>
          </div>
        </div>

      <% else %>
        <div class="data-nothing">
          <h1 class="lets-train">さあ、トレーニングをしましょう！</h1>
          <div class="training-btn"><%= link_to 'トレーニング', new_training_path, class: "training" %></div>
        </div>
      <% end %>
    </div>
  </div>

  <%# フレンドのデータ %>
