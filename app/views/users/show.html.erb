<div class='mypage-main'>

  <%= render "shared/header"%>

  <div class='mypage-contets'>
    <div class='my-image'>
      <%if current_user.image.present? %>
        <%= image_tag current_user.image, class: 'my-box' %>
      <%else %>
        <img class='nothing-image' src="images/no_image.png" alt="サンプル画像です">
      <%end %>
    </div>
    
    <div class='my-nickname'>
      <div class='my-box'><%= current_user.nickname%></div>
    </div>
  </div>

  <div class='edit-btn'>
  <%= link_to '編集', edit_user_path(current_user), method: :get %>
  </div>
</div>