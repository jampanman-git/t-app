<%= render "shared/navbar" %>

<div class="user-show">
  <div class="user-box">
    <h2 class="profile">
      My Profile
    </h2>
    <div class='user-img-content'>
      <%= image_tag current_user.image ,class:"user-box-img" %>
    </div>

    <%= link_to ' Edit', edit_user_registration_path, method: :get, class: "user-edit-btn" %>

    <table class="detail-table">
      <tr>
        <th class="detail-user">ニックネーム</th>
        <td class="detail-value"><%= current_user.nickname %></td>
      </tr>
      <tr>
        <th class="detail-user"><%= link_to 'フォロー数'%></th>
        <td class="detail-value"><%= current_user.follow_count %></td>
      </tr>
      <tr>
        <th class="detail-user"><%= link_to 'フォロワー数' %></th>
        <td class="detail-value"><%= current_user.followers_count %></td>
      </tr>
      <tr>
        <th class="detail-user">メールアドレス</th>
        <td class="detail-value"><%= current_user.email %></td>
      </tr>
    </table>
    
    </div>
  </div>